<section class="{{prefix}}-promotions">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h4 class="title">Thompson Boxing Events to Watch</h4>
			</div>
			<div class="col-12">
				<div class="glide promotions-glide">
					<div class="glide__track" data-glide-el="track">
						<ul class="glide__slides">
							<li class="glide__slide d-flex align-self-center">
								<div class="h-100">
									<img class="img-fluid" src="assets/images/promotions/slide1.jpg" alt="slide #1">
								</div>
							</li>
							<li class="glide__slide d-flex align-self-center">
								<div class="h-100">
									<img class="img-fluid" src="assets/images/promotions/slide2.jpg" alt="slide #2">
								</div>
							</li>
							<li class="glide__slide d-flex align-self-center">
								<div class="h-100">
									<img class="img-fluid" src="assets/images/promotions/slide3.jpg" alt="slide #3">
								</div>
							</li>
						</ul>
					</div>
					<div class="glide__bullets" data-glide-el="controls[nav]">
						<button class="glide__bullet" data-glide-dir="=0"></button>
						<button class="glide__bullet" data-glide-dir="=1"></button>
						<button class="glide__bullet" data-glide-dir="=2"></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
